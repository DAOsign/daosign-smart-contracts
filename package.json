{
  "name": "daosign-smart-contracts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "yarn lint:ts && yarn lint:sol",
    "lint:ts": "npx eslint test/** --fix",
    "lint:sol": "npx solhint contracts/**/*.sol",
    "prettier": "yarn prettier:ts && yarn prettier:sol",
    "prettier:sol": "npx prettier --write \"contracts/**/*.sol\"",
    "prettier:ts": "npx prettier --write \"**/*.ts\"",
    "typechain": "npx hardhat typechain",
    "build": "yarn hardhat compile",
    "cleanup": "rm -rf artifacts/ cache/ coverage/ typechain-types/ coverage.json",
    "test": "npx hardhat test",
    "size": "yarn hardhat size-contracts",
    "coverage": "yarn hardhat coverage",
    "prepare": "husky install",
    "docs": "yarn hardhat docs"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "hardhat": "^2.17.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.6",
    "@types/mocha": ">=10.0.1",
    "@types/node": ">=20.7.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "chai": "^4.3.8",
    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "ethers": "^6.7.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.6.2",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.5",
    "solidity-docgen": "0.6.0-beta.36",
    "ts-node": ">=10.9.1",
    "typechain": "^8.3.1",
    "typescript": ">=5.2.2"
  }
}
