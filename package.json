{
  "name": "daosign-smart-contracts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "yarn lint:ts && yarn lint:sol",
    "lint:ts": "npx eslint test/** --fix",
    "lint:sol": "npx solhint contracts/**/*.sol",
    "prettier": "yarn prettier:ts && yarn prettier:sol",
    "prettier:sol": "npx prettier --write \"contracts/**/*.sol\"",
    "prettier:ts": "npx prettier --write \"**/*.ts\"",
    "typechain": "npx hardhat typechain",
    "build": "yarn hardhat compile",
    "cleanup": "rm -rf artifacts/ cache/ coverage/ typechain-types/ coverage.json",
    "test": "npx hardhat test",
    "size": "yarn hardhat size-contracts",
    "coverage": "yarn hardhat coverage",
    "prepare": "husky install",
    "docs": "yarn hardhat docs"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.1",
    "hardhat": "^2.15.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.1",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": ">=10.0.1",
    "@types/node": ">=20.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "chai": "^4.3.7",
    "dotenv": "^16.1.4",
    "eslint": "^8.42.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^6.5.1",
    "hardhat-contract-sizer": "^2.9.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "solidity-docgen": "^0.6.0-beta.35",
    "ts-node": ">=10.9.1",
    "typechain": "^8.2.0",
    "typescript": ">=5.1.3"
  }
}
